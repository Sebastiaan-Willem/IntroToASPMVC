@*Imports in Shared -> ViewImports.cshtml file*@
@model MovieCreateViewModel

<form asp-controller="Movie" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating"></label>
        <input class="form-control" asp-for="Rating" />
        <span class="text-danger" asp-validation-for="Rating"></span>
    </div>

    <div class="form-group">
        <label asp-for="YearOfRelease"></label>
        <input class="form-control" type="date" asp-for="YearOfRelease" />
        <span class="text-danger" asp-validation-for="YearOfRelease"></span>
    </div>


    <div class="form-group">
        <select multiple="multiple" asp-for="Genre" asp-items="Html.GetEnumSelectList<Genre>()">
            <option selected="selected" value="value">Please select a value</option>
        </select>
        <span class="text-danger" asp-validation-for="Genre"></span>
    </div>

    <button class="btn-primary" type="submit">Add Movie</button>

</form>