@model MovieDeleteViewModel

    <form asp-controller="Movie" asp-action="Delete" method="post">
        <p>Are you sure you want to delete @Model.Title?</p>
        <input type="hidden" asp-for="@Model.Id"/>
        <button type="submit" class="btn btn-danger">Delete</button>
        |
        <a asp-controller="Movie" asp-action="Movies">Return to movies</a>


    </form>