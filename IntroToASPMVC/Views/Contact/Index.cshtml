@model ContactViewModel


<h1>Contacts</h1>
<button class="btn btn-primary"><a class="text-white" asp-area="" asp-controller="Contact" asp-action="Create">Add Contact</a></button>

@{
    if (Model.Contacts.Count <= 0)
    {
        <p>No Contacts Found</p>
    }
    else
    {

        <table>
            @foreach (var contact in Model.Contacts)
            {
                <tr>
                    <td><img src="@contact.ProfilePictureUrl" alt="profile picture" /></td>
                </tr>
                <tr>
                    <td><h4 style="color:cornflowerblue"> @contact.FirstName @contact.Name</h4></td>
                    <td><a class="nav-link text-dark" asp-area="" asp-controller="Contact" asp-action="Detail" asp-route-id="@contact.Id">Detail</a></td>
                    <td><a class="nav-link text-dark" asp-area="" asp-controller="Contact" asp-action="Edit" asp-route-id="@contact.Id">Edit</a></td>
                    <td><a class="nav-link text-dark" asp-area="" asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.Id">Delete</a></td>
                </tr>
}
        </table>



    }

}