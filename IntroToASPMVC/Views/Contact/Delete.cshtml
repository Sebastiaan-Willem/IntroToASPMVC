@model ContactDeleteViewModel

<form asp-controller="Contact" asp-action="Delete" method="post">
    <p><img src="@Model.ProfilePictureUrl" alt="profile picture" /></p>
    <p>Are you sure you want to delete @Model.FirstName @Model.Name?</p>
    <input type="hidden" asp-for="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    |
    <a asp-controller="Contact" asp-action="Index">Return to contacts</a>
</form>